pipeline {
    agent any

    environment {
        SERVER_IP = '13.60.26.172'
    }

    stages {

        stage('Clone Repo') {
            steps {
                echo 'üì• Pulling source code from GitHub...'
                git branch: 'main',
                    url: 'https://github.com/ireshkanashetti/static-website-project.git'
            }
        }

        stage('Deploy to Nginx Server') {
            steps {
                sshagent(credentials: ['node-app-key']) {
                    sh '''
                        echo "üßπ Cleaning old website files..."
                        ssh -o StrictHostKeyChecking=no ubuntu@13.60.26.172 "sudo rm -rf /var/www/html/*"

                        echo "üì§ Uploading new website files..."
                        scp -o StrictHostKeyChecking=no *.html *.css ubuntu@13.60.26.172:/tmp/

                        echo "üì¶ Moving website files to Nginx directory..."
                        ssh -o StrictHostKeyChecking=no ubuntu@13.60.26.172 "sudo cp /tmp/*.html /tmp/*.css /var/www/html/"
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deployment Successful!"
        }
        failure {
            echo "‚ùå Deployment Failed!"
        }
    }
}
