pipeline {
    agent any

    environment {
        SSH_CRED = 'node-app-key'       // Jenkins SSH key credential ID
        SERVER_IP = '13.60.26.172'       // EC2 Public IP
        REMOTE_USER = 'ubuntu'
        WEB_DIR = '/var/www/html/'   // Nginx web root
    }

    stages {
        stage('Clone Repo') {
            steps {
                echo "üì• Pulling source code from GitHub..."
                git url: 'https://github.com/ireshkanashetti/static-website-project.git', branch: 'main'
            }
        }

       stage('Deploy to Nginx Server') {
       steps {
    sshagent(['node-app-key']) {
        sh '''
            echo "üßπ Cleaning old website files..."
            ssh -o StrictHostKeyChecking=no ubuntu@${SERVER_IP} sudo rm -rf /var/www/html/*

            echo "üì§ Uploading new website files to server..."
          scp -o StrictHostKeyChecking=no *.html *.css ubuntu@${SERVER_IP}:/tmp/var/www/html/"


            echo "üì¶ Moving website files to Nginx directory..."
            ssh -o StrictHostKeyChecking=no ubuntu@${SERVER_IP} sudo cp -r /tmp/* /var/www/html/
        '''
    }
}

        }
    }

    post {
        success {
            echo "üöÄ Deployment Successful! Website Live: http://${SERVER_IP}"
        }
        failure {
            echo "‚ùå Deployment Failed ‚Äî check Jenkins console output."
        }
    }
}
